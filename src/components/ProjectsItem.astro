---
import Badge from './badge.astro';

interface Props {
  title: string;
  date: string;
  description: string;
  image?: string;
  technologies?: string[];
}

const { title, date, description, image, technologies} = Astro.props;
---

<div class="rounded-xl border border-white/10 p-6 bg-white/5">
    <header>
        <div class="flex justify-between">
            <h2 class="font-semibold">{title}</h2>
            <time class="text-gray-400/60 text-sm">{date}</time>
        </div>
    </header>
    <div class="flex justify-center">
        <img src={image} alt="">
    </div>
    <p class="mt-4">
        {description}
    </p>
    <slot/>
</div>