---
import Badge from './badge.astro';

interface Props {
  title: string;
  date: string;
  description: string;
  image: string;
  technologies: string[];
  gitHubUrl?: string;
}

const { title, date, description, image, technologies, gitHubUrl} = Astro.props;
---
<a href={gitHubUrl} target="_blank" rel="noopener noreferrer">
    <div class="rounded-xl border border-white/10 p-6 bg-white/5 hover:scale-105 transition">
        <header class="mb-4">
            <div class="flex justify-between">
                <h2 class="font-semibold">{title}</h2>
                <time class="text-gray-400/60 text-sm">{date}</time>
            </div>
        </header>
        <div class="flex justify-center w-10/12 mx-auto mb-6">
            <img class="max-w-full h-auto" src={image} alt="">
        </div>
        <p class="mt-4 mb-4 w-11/12 mx-auto">
            {description}
        </p>
        <slot/>
    </div>
</a>
