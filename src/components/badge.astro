---
interface Props {
    class?: string;
    color?: 'blue' | 'green' | 'purple' | 'red' | string;
}

const { class: customClass = '', color } = Astro.props;
const colorMap: Record<string, string> = {
    'TypeScript': 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300',
    'SQL Server': 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300',
    'C#': 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300',
    'Angular': 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300',
    '.NET': 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300',

    'Zepp OS': 'bg-cyan-100 text-cyan-800 dark:bg-cyan-900 dark:text-cyan-300',
    'JavaScript': 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200',
    'Node.js': 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300',

    'Electron': 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300',
    'Puppeteer': 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-300',
    
    'blue': 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300',
};
const colorClass = color ? (colorMap[color] ?? String(color)) : '';
---
<span 
    class={`text-xs font-medium px-2.5 py-0.5 rounded-sm me-2 ${colorClass}`}>
    <slot />
</span>