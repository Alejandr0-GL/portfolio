---

import AboutMe from '../components/AboutMe.astro';
import Badge from '../components/badge.astro';
import Education from '../components/Education.astro';
import Footer from '../components/Footer.astro';
import GitHubIcon from '../components/icons/GitHubIcon.astro';
import LinkedInIcon from '../components/icons/LinkedInIcon.astro';
import MailIcon from '../components/icons/MailIcon.astro';
import Projects from '../components/Projects.astro';
import SocialMedia from '../components/SocialMedia.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Portfolio de Alejandro Guevara">
	<main>
	<section class="w-full mx-auto max-w-[1100px] py-30 pb-24">
			<div class="flex gap-x-12 items-center">
				<div>
					<img 
        				class="rounded-full w-40 h-40 "
        				src="/src/assets/photo.jpg" 
        				alt="Avatar"
    				/>
				</div>
				<div>
					<h1 class="text-white text-5xl font-bold flex flex-row gap-x-6 pb-6">
						Hola! Soy Alejandro <a href="http://www.linkedin.com/in/alejandroguevara10" class="flex justify-center items-center"><Badge color="blue">Disponible para trabajar</Badge></a>
					</h1>
					<h2 class="text-xl opacity-70">
						Tecnologo en desarrollo de software y estudiante de ingenieria de software 
					</h2>
					<nav class="flex gap-x-4 mt-6">
						<SocialMedia href="http://www.linkedin.com/in/alejandroguevara10">
							<LinkedInIcon class="w-6 h-6"/>
							LinkedIn
						</SocialMedia>
						<SocialMedia href="https://github.com/Alejandr0-GL">
							<GitHubIcon class="w-6 h-6"/>
							GitHub
						</SocialMedia>
						<SocialMedia href="mailto:alejo.gl031@gmail.com">
							<MailIcon class="w-6 h-6"/>
							alejo.gl031@gmail.com
						</SocialMedia>
					</nav>
				</div>
				
			</div>
			
			
		</section>

		

		<section class="mx-auto max-w-[1100px] pb-6" id="projects">
			<Projects />
		</section>

		<section class="mx-auto max-w-[1100px] pb-16" id="education">
			<Education />
		</section>

		<section class="mx-auto max-w-[1100px] pb-16" id="about">
			<AboutMe />
		</section>
		
		

	</main>
</Layout>
